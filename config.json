{
    "processing": {
        "min_duration_seconds": 60,
        "max_duration_seconds": 180,
        "scene_detection_threshold": 0.3,
        "silence_threshold_db": -30,
        "silence_duration_seconds": 1.0
    },
    "subtitles": {
        "enabled": true,
        "whisper_model": "base",
        "font_name": "Arial",
        "font_size": 24,
        "font_color": "&Hffffff",
        "outline_color": "&H000000",
        "outline_width": 1,
        "background_enabled": false,
        "language": "auto",
        "force_style": "FontName=Arial,FontSize=24,PrimaryColour=&Hffffff,OutlineColour=&H000000,Outline=1"
    },
    "output": {
        "video_codec": "copy",
        "audio_codec": "copy",
        "organize_by_source": true,
        "include_duration_in_filename": true,
        "subtitle_burn_in": true,
        "create_mobile_version": true,
        "mobile_resolution": {
            "width": 1080,
            "height": 1920
        }
    },
    "supported_formats": [
        ".mp4", ".avi", ".mkv", ".mov", 
        ".wmv", ".flv", ".webm", ".m4v"
    ]
}